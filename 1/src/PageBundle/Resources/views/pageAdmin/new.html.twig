{% extends '::admin/index.html.twig' %}

{% block title %}
    Page creation - {{ parent() }}
{% endblock %}


{% block body %}

    {{ parent() }}


    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title">Page creation</h3></div>
                <div class="panel-body">
                    {{  form_start(form,{'attr': {'class': 'form-horizontal'} }) }}
                        <div class="form-group">
                            <label class="col-md-2 control-label">Titre</label>
                            <div class="col-md-6">
                                {{ form_widget(form.title,{'attr': {'class': 'form-control', 'placeholder': 'Some text value...'} } ) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Contenu</label>
                            <div class="col-md-10">
                                {{ form_widget(form.content,{'attr': {'rows': '7'} } ) }}
                            </div>
                        </div>

                        <input class="btn btn-primary" type="submit" value="Create" />
                    {{ form_end(form) }}

                </div> <!-- panel-body -->
            </div> <!-- panel -->
        </div> <!-- col -->
    </div> <!-- End row -->


    <a class="btn btn-primary" href="{{ path('admin_page_index') }}">Back to the list</a>




{% endblock %}
