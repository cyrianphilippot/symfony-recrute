{% block fos_user_content %}
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container">
                {% block body %}
                    <div class="row">
                        <div class="col-sm-12">
                            <h4 class="pull-left page-title">Blank Page</h4>
                            <ol class="breadcrumb pull-right">
                                <li><a href="#">Moltran</a></li>
