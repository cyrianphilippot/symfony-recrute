{% trans_default_domain 'FOSUserBundle' %}



<div class="wrapper-page">

    <div class="panel panel-color panel-primary panel-pages">

        <div class="panel-heading bg-img">
            <div class="bg-overlay"></div>
            <h3 class="text-center m-t-10 text-white"> Réinitialiser le mot de passe</h3>
        </div>

        <div class="panel-body">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="text-center fos_user_resetting_request">

                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    Entrez votre <b>Email</b> et les instructions vous seront envoyées!
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input type="text" id="username" class="form-control input-lg" name="username" placeholder="Enter Email" required="required" />
                    </div>
                </div>
                <br/>
                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <input type="submit" class="btn btn-lg btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
                    </div>
                </div>
            </form>

        </div>

    </div>
</div>