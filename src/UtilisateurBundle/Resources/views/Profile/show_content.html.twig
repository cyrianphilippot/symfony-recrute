{% trans_default_domain 'FOSUserBundle' %}

<div class="wraper container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="bg-picture text-center" style="background-image:url('{{ asset('Resources/public/images/big/bg.jpg') }}')">
                <div class="bg-picture-overlay"></div>
                <div class="profile-info-name">
                    {% if app.user.image is not null %}
                        <img
                                src="{{ asset(app.user.image.AssetPath) }}"
                                alt="{{ app.user.username }}"
                                class="thumb-lg img-circle img-thumbnail"
                        />

                    {% else %}
                        <img src="{{ asset('Resources/public/images/avatar-1.jpg') }}" class="thumb-lg img-circle img-thumbnail" alt="profile-image">
                    {% endif %}


                    <h3 class="text-white">{{ app.user.username }}</h3>
                </div>
            </div>
            <!--/ meta -->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="tab-pane">

                <div class="row">
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    <div class="col-md-4">
                        <!-- Personal-Information -->
                        <div class="panel panel-default panel-fill">
                            <div class="panel-heading">
                                <h3 class="panel-title">Personal Information</h3>
                            </div>
                            <div class="panel-body fos_user_user_show">

                                <div class="about-info-p">
                                    <strong>{{ 'profile.show.fullname'|trans }}</strong>
                                    <br/>
                                    <p class="text-muted"> {{ user.fullname }}</p>
                                </div>

                                <div class="about-info-p">
                                    <strong>{{ 'profile.show.username'|trans }}</strong>
                                    <br/>
                                    <p class="text-muted"> {{ user.username }}</p>
                                </div>

                                <div class="about-info-p">
                                    <strong>{{ 'profile.show.phone'|trans }}</strong>
                                    <br/>
                                    <p class="text-muted"> {{ user.phone }}</p>
                                </div>
                                <div class="about-info-p">
                                    <strong>{{ 'profile.show.email'|trans }}</strong>
                                    <br/>
                                    <p class="text-muted"> {{ user.email }}</p>
                                </div>

                            </div>
                        </div>
                        <!-- Personal-Information -->

                    </div>


                    <div class="col-md-8">
                        <!-- Personal-Information -->
                        <div class="panel panel-default panel-fill">
                            <div class="panel-heading">
                                <h3 class="panel-title">Biography</h3>
                            </div>
                            <div class="panel-body">
                                <p>{{ user.aboutMe | nl2br  }}</p>
                            </div>
                        </div>
                    </div>

                </div>



            </div>
        </div>


        <ul>
            <li>
                <a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">Edit mes informations</a>
            </li>

        </ul>


    </div>
</div> <!-- container -->







