{% extends '::admin/index.html.twig' %}


{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12">
            <h4 class="pull-left page-title">Administration</h4>
            <ol class="breadcrumb pull-right">
                <li><a href="#">Administration</a></li>
                <li><a href="#">Show category</a></li>
                <li class="active">{{ category.name }}</li>
            </ol>
        </div>
    </div>




    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Advert</h3>
                </div>
                <div class="panel-body">
                    {# On affiche tous les messages flash dont le nom est « info » #}
                    {% for message in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success">Message flash : {{ message }}</div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table class="table table-striped">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ category.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ category.name }}</td>
                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Row -->

    <ul>
        <li>
            <a href="{{ path('admin_category_index') }}" class="btn btn-info">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_category_edit', { 'id': category.id }) }}" class="btn btn-default">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
