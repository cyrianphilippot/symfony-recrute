{% extends '::default/index.html.twig' %}


{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title">Candidature à l'offre {{ application.advert.title }}</h3></div>
                <div class="panel-body">


                    {% if form_errors(form) is not empty %}
                    <div class="alert alert-danger">
                        {{  form_errors(form)  }}
                    </div>
                    {% endif %}


                    <div class="form-group">
                    </div>
                    {{  form_start(form,{'attr': {'class': 'form-horizontal'} }) }}
                    <div class="form-group">
                        <label class="col-md-2 control-label">Votre Email: </label>
                        <div class="col-md-6">
                            {{ form_widget(form.author,{'attr': {'class': 'form-control'} } ) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Dites-nous tout !</label>
                        <div class="col-md-6">
                            {{ form_widget(form.content,{'attr': {'class': 'form-control'} } ) }}
                        </div>
                    </div>

                    <div class="form-group m-b-0">
                        <div class="col-sm-offset-2 col-sm-9">
                            <input class="btn btn-primary" type="submit" value="Postuler" />
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div> <!-- panel-body -->
            </div> <!-- panel -->
        </div> <!-- col -->
    </div> <!-- End row -->

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('platform_view', {'slug': application.advert.slug}) }}" >
            Return à l'offre  {{ application.advert.title }} </a>
        </li>
    </ul>
{% endblock %}
